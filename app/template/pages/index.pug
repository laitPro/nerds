extends ../layouts/_main.layout.pug

block title 
    | The main title of index page

block content
        header.main-header
            .container

                a(href='#').logo.main-header__logo
                    h1.logo__title nerds
                    img(src='imgs/content/nerds-logo.png'  alt='logo').logo__img

                nav.main-nav.main-header__main-nav
                    ul.nav-list
                        - var nav = ['студия', 'клиенты', 'магазин', 'контакты']
                        each item in nav
                            li.nav-list__item
                                a(href="#").nav-list__link= item

                .shop-cart.main-header__shop-cart
                    a(href='#').shop-cart__text корзина
                    
            .container
                .slider.main-header__slider
                    - for (var i=1; i < slides.length - 1; i++)
                        .slider__slide                       
                            .slider__info
                                h2.slider__title!=slides[i].title
                                p.slider__desc=slides[i].desc
                                a(href="#").btn.slider__btn Узнать больше

                            .slider__wrap-img
                                img(src='' + slides[i].src_img alt='slider-img' style='' + slides[i].style).slider__img
                    ul.slider__pagination
                        - for (var i=1; i<=3; i++)
                            li.pagination__item
                                - if (i == 1)
                                    a(href="#").pagination__link.pagination__link_active pagin
                                - else
                                    a(href="#").pagination__link.pagination__link pagin
        main.main-content
            .container

                section.service
                    ul.service__list
                        - for (var i = 0; i < service.length; i++)
                            li.service__item
                                .service__wrap-img
                                    img(src='' + service[i].wrap_img alt='service').service__img
                                span.service__list-title=service[i].list_title
                                p.service__list-desc=service[i].list_desc

                                a.btn.service__btn(class="btn_" + service[i].color) Заказать

                section.about
                    .about__left
                        h2.about__title Мы - маленькая, но гордая дизайн-студия из Краснодара.
                        p.about__desc Исповедуем принципы минимализма и чистоты. Ставим математический расчет превыше креатива. Работаем не покладая рук, как роботы.
                        .about__works
                            p.works__title Выполняем заказы на разработку:
                            ul.works__list
                                - for (var i = 0; i < 3; i++)
                                    li.works__item
                                        span.works__elem Веб-сайтов любой сложности
                    .about__right
                        .about__wrap-img
                            img(src='#' alt='about-img').about__img
                        .about__skills
                            p.skills__title с 2004 года любим точность во всем:
                            ul.skills__list
                                - for (var i = 0; i < 3; i++)
                                    li.skills__item
                                        span.skills__number 146
                                        span.skills__percent %
                                        span.skills__desc Уровень самоотдачи

                section.partners
                    ul.partners-list
                        - for (var i = 0; i < 3; i++)
                            li.list-item
                                a(href='#').partners__wrap-img
                                    img(src='#' alt='partner').partners__img
                section.map
                    .map__wrap-flag
                        img(src='#' alt='flag-img').flag-img
                    .container
                        .map__info
                            span.map__info-title Nerds design studio
                            p.map__info-text 191186, Санкт-Петербург, ул. Б.    Конюшенная, д. 19/8
                            p.map__info-text тел. +7 (812) 275-75-75
                            a(href='#').btn Напишите нам

        footer.main-footer

            .container
                ul.socials
                    - for (var i = 0; i < 3; i++)
                         li.socials__item
                             a(href='#').socials__link vk
                .slogan
                    span.slogan__title Давайте дружить, это выгодно!
                    p.slogan__text Скидка 10% для друзей из социальных сетей.
